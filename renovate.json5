{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: ["config:base"],
  dependencyDashboard: true,
  bazel: {
    ignorePaths: ["repositories/ros2_repositories_impl.bzl"],
  },
  pip_requirements: {
    enabled: false,
  },
  "pre-commit": {
    enabled: true,
  },
  packageRules: [
    {
      matchDatasources: ["bazel"],
      matchPackageNames: [
        "bazel_skylib",
        "nlohmann_json",
        "pybind11",
        "rules_python",
        "zstd",
      ],
    },
  ],
  schedule: ["every weekend"],
}
