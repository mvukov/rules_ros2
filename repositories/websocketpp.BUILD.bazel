""" Builds websocketpp.
"""

load("@rules_cc//cc:defs.bzl", "cc_library")

cc_library(
    name = "websocketpp",
    hdrs = glob(["websocketpp/**/*.hpp"]),
    defines = ["_WEBSOCKETPP_CPP11_STL_"],
    includes = ["."],
    linkopts = [
        "-lpthread",
        "-lrt",
    ],
    visibility = ["//visibility:public"],
    deps = [
        "@asio",
        "@zlib",
    ],
)
