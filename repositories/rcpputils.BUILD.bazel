""" Builds rcpputils.
"""

load("@rules_cc//cc:defs.bzl", "cc_library")

cc_library(
    name = "rcpputils",
    srcs = glob(["src/*.cpp"]),
    hdrs = glob(["include/**/*.hpp"]),
    copts = ["-std=c++17"],
    includes = ["include"],
    visibility = ["//visibility:public"],
    deps = ["@ros2_rcutils//:rcutils"],
)
