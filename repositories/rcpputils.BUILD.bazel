""" Builds rcpputils.
"""

load("@com_github_mvukov_rules_ros2//ros2:cc_defs.bzl", "ros2_cpp_library")

ros2_cpp_library(
    name = "rcpputils",
    srcs = glob(["src/*.cpp"]),
    hdrs = glob(["include/**/*.hpp"]),
    copts = ["-std=c++17"],
    includes = ["include"],
    visibility = ["//visibility:public"],
    deps = ["@ros2_rcutils//:rcutils"],
    deps = ["@ros2_rcutils//:rcutils"],
    visibility = ["//visibility:public"],
)
