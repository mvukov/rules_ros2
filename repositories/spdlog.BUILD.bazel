""" Builds spdlog.
"""

load("@com_github_mvukov_rules_ros2//ros2:cc_defs.bzl", "CPP_COPTS")
load("@rules_cc//cc:defs.bzl", "cc_library")

cc_library(
    name = "spdlog",
    srcs = glob(
        ["src/**/*.cpp"],
        exclude = ["src/fmt.cpp"],
    ) + ["include/spdlog/fmt/fmt.h"],
    hdrs = glob(
        ["include/**/*.h"],
        exclude = ["include/spdlog/fmt/*.h"],
    ),
    copts = CPP_COPTS + ["-w"],
    defines = [
        "SPDLOG_COMPILED_LIB",
        "SPDLOG_FMT_EXTERNAL",
    ],
    includes = ["include"],
    linkopts = select(
        {
            "@platforms//os:linux": ["-lpthread"],
            "@platforms//os:macos": ["-lpthread"],
            "@platforms//os:qnx": [],
        },
        no_match_error = "Only Linux, macOS and QNX are supported!",
    ),
    visibility = ["//visibility:public"],
    deps = ["@fmt"],
)
