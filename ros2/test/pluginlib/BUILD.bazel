load("@rules_cc//cc:defs.bzl", "cc_library", "cc_test")
load("//ros2:plugin.bzl", "ros2_ament_setup", "ros2_plugin")

cc_library(
    name = "polygon_base",
    hdrs = ["regular_polygon.h"],
)

cc_library(
    name = "_polygon_plugins",
    srcs = ["polygon_plugins.cc"],
    deps = [
        ":polygon_base",
        "@ros2_pluginlib//:pluginlib",
    ],
)

ros2_plugin(
    name = "polygon_plugins",
    dep = ":_polygon_plugins",
    types_to_base_class_types = {
        "polygon_plugins::Square": "polygon_base::RegularPolygon",
        "polygon_plugins::Triangle": "polygon_base::RegularPolygon",
    },
)

